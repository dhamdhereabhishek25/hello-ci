{
  "name": "hello-ci",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "node src/app.js",
    "test": "jest --ci --runInBand",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-junit": "^13.2.0",
    "supertest": "^6.3.4"
  },
  "dependencies": {
    "express": "4.19.2"
  },
  "jest": {
    "testEnvironment": "node",
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "reports/junit",
          "outputName": "test-results.xml",
          "addFileAttribute": "true"
        }
      ]
    ]
  }
}
